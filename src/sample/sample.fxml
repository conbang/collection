<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" minWidth="500" minHeight="500">
    <Label text="name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="age" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="age" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button GridPane.rowIndex="2" GridPane.columnIndex="0" text="add" onMouseClicked="#addElement"/>
    <Button GridPane.rowIndex="2" GridPane.columnIndex="1" text="show List" onMouseClicked="#showList"/>
    <TextArea fx:id="textarea" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="4"/>
</GridPane>